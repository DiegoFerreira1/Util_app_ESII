<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="SpeakableTextPresentCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">

        <View
            android:id="@+id/id_view_principal"
            style="@style/Container_principal"
            android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/id_view_musica"
            style="@style/Container_categoria"
            app:layout_constraintBottom_toTopOf="@+id/id_view_principal"
            app:layout_constraintEnd_toStartOf="@+id/id_view_design"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/id_view_principal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/id_view_design"
            style="@style/Container_categoria"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/id_view_principal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/id_view_musica"
            app:layout_constraintTop_toTopOf="@+id/id_view_musica" />

        <ImageView
            android:id="@+id/id_view_fotografias"
            style="@style/Container_categoria"
            app:layout_constraintBottom_toTopOf="@+id/id_view_principal"
            app:layout_constraintTop_toBottomOf="@+id/id_view_principal"
            app:layout_constraintVertical_bias="0.501"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/id_view_ti"
            style="@style/Container_categoria"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>