<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/id_img_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_logo"
        android:contentDescription="@string/img_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/id_text_util"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_util"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/id_img_logo"/>

    <TextView
        android:id="@+id/id_text_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_util2"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/id_text_util"/>

    <TextView
        android:id="@+id/id_text_versao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_versao1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/id_text_social"
        android:layout_marginTop="160dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_equipe"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/id_text_versao"/>


</androidx.constraintlayout.widget.ConstraintLayout>